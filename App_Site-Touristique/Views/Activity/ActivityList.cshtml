@model IEnumerable<App_Site_Touristique.Models.Activity>

@{
    ViewBag.Title = "ActivityList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ActivityList</h2>

<p>
    @Html.ActionLink("Create New", "ActivityInfo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prix)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prix)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditActivity", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteActivity", new { id=item.Id })
        </td>
    </tr>
}

</table>
